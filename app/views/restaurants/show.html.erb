
<h2><%= @restaurant.name %></h2>
<h4>Address</h4>

<p><%= @restaurant.address %></p>
<h4>Category</h4>

<p><%= @restaurant.category %></p>
<h4>Reviews</h4>
<%= link_to "Add review", new_restaurant_review_path(@restaurant)%>
<ul><% @reviews.each do |review| %>
<li><%=review.content%>, <%=review.rating%></li>
<%end%>
</ul>


<%= link_to "Go back", restaurants_path, class: "btn btn-primary"%>
